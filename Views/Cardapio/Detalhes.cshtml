@model CafeCentral.Models.Produto

@{
ViewData["Title"] = Model.Nome;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            @if (!string.IsNullOrEmpty(Model.ImagemUrl))
            {
            <img src="@Model.ImagemUrl" class="img-fluid rounded shadow" alt="@Model.Nome">
            }
            else
            {
            <img src="/images/placeholder.jpg" class="img-fluid rounded shadow" alt="@Model.Nome">
            }
        </div>
        <div class="col-md-6">
            <h1 class="text-success mb-3">@Model.Nome</h1>
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <p class="card-text">@Model.Descricao</p>
                    <p class="card-text">
                        <small class="text-muted">Categoria: @Model.Categoria</small>
                    </p>
                    <h3 class="text-success mb-4">R$ @Model.Preco.ToString("F2")</h3>

                    <form asp-action="AdicionarAoCarrinho" method="post" class="d-flex">
                        <input type="hidden" name="produtoId" value="@Model.Id" />
                        <div class="input-group mb-3" style="max-width: 200px;">
                            <span class="input-group-text">Quantidade</span>
                            <input type="number" name="quantidade" value="1" min="1" max="10" class="form-control" />
                        </div>

                        <button type="submit" class="btn btn-success btn-lg ms-3">
                            <i class="bi bi-cart-plus"></i> Adicionar ao Carrinho
                        </button>
                    </form>
                </div>
            </div>

            <div class="d-grid gap-2 d-md-block">
                <a asp-action="Index" class="btn btn-outline-success me-2">
                    <i class="bi bi-arrow-left"></i> Voltar ao Card√°pio
                </a>
                <a asp-action="Carrinho" class="btn btn-outline-success">
                    <i class="bi bi-cart"></i> Ver Carrinho
                </a>
            </div>
        </div>
    </div>
</div>