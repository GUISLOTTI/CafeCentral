@model ErrorViewModel
@{
ViewData["Title"] = "Erro";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 mx-auto text-center">
            <h1 class="display-4 text-danger mb-4">Oops!</h1>
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="card-title text-danger">Ocorreu um erro</h5>
                    <p class="card-text">
                        Pedimos desculpas pelo inconveniente. Por favor, tente novamente mais tarde ou entre em contato conosco.
                    </p>

                    @if (Model.ShowRequestId)
                    {
                    <p class="text-muted mt-3">
                        <small>
                            <strong>Request ID:</strong> <code>@Model.RequestId</code>
                        </small>
                    </p>
                    }
                </div>
            </div>

            <div class="mt-4">
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-success btn-lg">Voltar para Home</a>
            </div>
        </div>
    </div>
</div>